<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d %p %c{1.} [%t] %m%n
            </pattern>
        </encoder>
    </appender>

    <logger name="tapir-crud" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>